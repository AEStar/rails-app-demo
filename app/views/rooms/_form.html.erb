<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :beds %>
    <%= form.number_field :beds, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :square %>
    <%= form.number_field :square, class:"form-control" %>
  </div>

  <div class="field form-group" style="display: none;">
    <%= form.label :assigned %>
    <%= form.check_box :assigned, type: :hidden%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-dark" %>
  </div>
  <br/>
<% end %>
