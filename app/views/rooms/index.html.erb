<h1>Rooms Overview</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Address</th>
      <th>Price</th>
      <th>Beds</th>
      <th>Square</th>
      <th>Assigned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.address %></td>
        <td><%= room.price %></td>
        <td><%= room.beds %></td>
        <td><%= room.square %> sq ft</td>
        <% if room.assigned %>
          <td>Full</td>
        <% else %>
          <td>Empty</td>
        <% end %>
        
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Remove', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class:"btn btn-secondary" %>
